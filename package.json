{
  "name": "whatsapp-chatgpt-bot",
  "version": "1.1.0",
  "description": "Bot humanizado de vendas via WhatsApp (Twilio) e ChatGPT (OpenAI)",
  "main": "dist/server.js",
  "scripts": {
    "test": "cross-env NODE_ENV=test jest --coverage",
    "test:unit": "cross-env NODE_ENV=test jest src/tests/unit --coverage",
    "test:e2e": "cross-env NODE_ENV=test jest --config jest.config.js --runInBand",
    "dev": "ts-node-dev --respawn src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write 'src/**/*.ts'"
  },
  "keywords": [
    "whatsapp",
    "chatgpt",
    "bot",
    "twilio",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.5.0",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "mysql2": "^3.2.4",
    "openai": "^4.5.0",
    "rate-limiter-flexible": "^7.0.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^4.6.3",
    "twilio": "^5.5.2",
    "winston": "^3.17.0",
    "xstate": "^5.19.3",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.18",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.2",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/twilio": "^3.19.3",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "cross-env": "^7.0.3",
    "dotenv": "^16.5.0",
    "eslint": "^9.25.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^28.11.0",
    "eslint-plugin-prettier": "^5.2.6",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "supertest": "^7.1.1",
    "ts-jest": "^29.3.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.31.1"
  }
