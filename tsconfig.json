{
  "compilerOptions": {
    "target": "ES2021",
    "module": "CommonJS",
    "moduleResolution": "node",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "baseUrl": "src",                  
    "paths": {
      "@/*": ["*"] // ✅ Corrigido: agora resolve "@/utils/logger" etc.
    }
  },
  "include": [
    "src",
    "src/types",
    "tests" // ✅ Adicionado para incluir seus testes fora de src/
  ]
}
